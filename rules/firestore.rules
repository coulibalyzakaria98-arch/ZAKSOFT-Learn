rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default open rules for development
    match /{document=**} {
      allow read, write: if true;
    }

    // Rules for formations, chapitres, etc. (assuming public read)
    match /formations/{formationId} {
      allow read: if true;
      allow write: if false; // Or some admin logic
    }

    match /formations/{formationId}/chapitres/{chapitreId} {
      allow read: if true;
      allow write: if false; // Or some admin logic
    }

    // Users can only read/write their own progress
    match /users/{userId}/progress/{progressId} {
        allow read, write: if request.auth.uid == userId;
    }

    // Users can manage their own notes
    match /notes/{noteId} {
      allow create: if request.auth.uid != null;
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}